<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-Colimmerce/api/productos</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header>
      <nav class="nav">
        <a href="/"><h1>E-Colimmerce</h1></a>
      </nav>
    </header>
    <main>
      <section class="products">
        <% list.forEach((e) => { %>
        <div class="card">
          <img src="<%= e.url %>" alt="shoe" />
          <div class="card__container">
            <h2><b><%= e.name %></b></h2>
            <div class="card__numbers">
              <p class="card__price">$ <%= e.price.toLocaleString("es") %></p>
              <span>Stock: <%= e.stock %></span>
            </div>
            <p class="card__descrip"><%= e.descrip %></p>
          </div>
        </div>
        <% }); %>
      </section>
    </main>
  </body>
</html>
